@model UsuarioViewModel

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Olá, @Model.Nome</a>

<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuPrincipal" data-bs-toggle="dropdown" aria-expanded="false">
        Menu Principal
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuPrincipal">
        <li class="dropdown-item">
            <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
        </li>

        @if (Model.Perfil == webAdmin.Domain.Enums.PerfilEnum.Admin)
        {
            <li class="dropdown-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
            </li>
        }

        <li class="dropdown-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Edit">Alterar Senha</a>
        </li>

        <li class="dropdown-item">
            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
        </li>
    </ul>
</div>

